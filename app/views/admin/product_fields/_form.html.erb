
<% form_for :field, :url => url do |f| -%>
  <%= f.error_messages %>
  
  <table class="form">
    <tr>
      <td class="label">Name:</td>
      <td class="field"><%= f.text_field :name, :class => "f-input" %></td>
    </tr>
    <tr>
      <td class="label">Control:</td>
      <td class="field">
        <%= f.select "control", Product::Field::CONTROL_TYPES.map{|type| [ type['name'], type['value'] ] }, { :include_blank => "Please Select..." }, :class => "f-input" %>
      </td>
    </tr>
  </table>

  <p><%= f.submit "Submit" %><p>
  <%= link_to "Back To List", { :action => "list" }, :class => "action-link-text back" %>
  <div class="clear"></div>
  
<% end -%>

