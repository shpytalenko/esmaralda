
<% javascript 'jquery-1.3.2.min.js', 'prices-discount.js' %>

<% form_for :item, @item, :url => url, :html => { :multipart => true } do |f| -%>
  <%= f.error_messages %>

	<p class="subcaption"><b>Main Information:</b></p>
  <table>
    <tr>
      <td>
        <%= render :partial => 'form_item_main', :locals => { :f => f } %>
      </td>
			<% unless @item.new_record? -%>
	      <td style="padding-left: 40px;">
	        <%= render :partial => 'form_item_data', :locals => { :f => f } %>
	      </td>
			<% end -%>
    </tr>
  </table>

  <%#= render :partial => 'form_item_ebay', :locals => { :f => f } %>

  <% unless @item.new_record? -%>
    <%= render :partial => 'form_item_images', :locals => { :f => f } %>
  <% end -%>

  <p><%= f.submit "Submit" %><p>
  <%= link_to "Back To List", { :action => "list" }, :class => "action-link-text back" %>
	<% unless @item.new_record? -%>
  	<%= link_to "Preview Listing", { :action => "preview_listing", :id => @item }, :class => "action-link-text layout", :target => "_blank" %>
	<% end -%>
  <div class="clear"></div>

<% end -%>
