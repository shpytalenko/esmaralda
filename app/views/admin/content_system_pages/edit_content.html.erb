<% title "Edit Page Content" %>

<% form_for :page, @page, :url => { :action => "update", :id => @page } do |f| -%>
  <%= f.error_messages %>

  <table class="form">
    <tr>
      <td class="label" style="width: 100px;">System Name:</td>
      <td class="field"><%=h @page.system_name %></td>
    </tr>
    <tr>
      <td class="label" style="width: 100px;">Name:</td>
      <td class="field"><%=h @page.name %></td>
    </tr>
  </table>
  
  <table class="form">
    <tr>
      <td class="label">Content:</td>
    </tr>
    <tr>
      <td>
        <%= f.tinymce :content, :style => "width: 600px;" %>
      </td>
    </tr>
  </table>

  <p><%= f.submit "Submit" %><p>
  
  <%= link_to "Back To List", { :action => "list" }, :class => "action-link-text back" %>
  <div class="clear"></div>

<% end -%>

